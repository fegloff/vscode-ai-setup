{
  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(forge:*)",
      "Bash(cast:*)",
      "Bash(anvil:*)",
      "Bash(turbo:*)",
      "Bash(git diff:*)",
      "Bash(git status)",
      "Bash(git log:*)",
      "Read(./docs/**)",
      "Read(./apps/**)",
      "Read(./packages/**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/.*key*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  }
}
